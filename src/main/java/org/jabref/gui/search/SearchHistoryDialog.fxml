<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<DialogPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jabref.gui.search.SearchHistoryDialog">
    <content>
        <VBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <TableView
                    fx:id="table"
                    HBox.hgrow="ALWAYS">
                <columns>
                    <TableColumn
                            fx:id="searchContent"
                            text="%Search content"
                            reorderable="false"
                            resizable="true"/>
                    <TableColumn
                            fx:id="delete"
                            prefWidth="50.0"
                            maxWidth="50.0"
                            minWidth="50.0"
                            reorderable="false"
                            resizable="false"/>
                </columns>
                <columnResizePolicy>
                    <TableView
                            fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
            <VBox alignment="CENTER_RIGHT">
                <Button onAction="#clear"  text="%Clear history"/>
            </VBox>
        </VBox>
    </content>
    <ButtonType fx:constant="CLOSE"/>
</DialogPane>
